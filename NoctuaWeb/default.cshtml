
@{ 
    Layout = "_shared/_layout.cshtml";
}
<main class="mdl-layout__content">

    <script src="~/_js/userFormValidation.js"></script>
    <script src="~/_js/repositories/userRepository.js"></script>
    <script src="~/_js/services/userServices.js"></script>

    <div class="mdl-grid">
        <div class="mdl-cell mdl-cell--6-col greyBg mdl-shadow--2dp">
            <div class="mdl-grid">
                <div class="mdl-layout-spacer"></div>
                <div class="mdl-cell mdl-cell--10-col mdl-cell">
                    <form method="post" action="#">
                        <span class="mdl-layout-title">Cadastro</span>
                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label fullWidth">
                            <input class="mdl-textfield__input" type="text" id="tfNome" pattern="[A-Za-zÀ-ú ]+">
                            <label class="mdl-textfield__label" for="tfNome">Nome</label>
                            <span id="nomeError" class="mdl-textfield__error">Valor inválido</span>
                        </div>
                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label fullWidth">
                            <input class="mdl-textfield__input" type="text" id="tfSobrenome" pattern="[A-Za-zÀ-ú ]+">
                            <label class="mdl-textfield__label" for="tfSobrenome">Sobrenome</label>
                            <span id="sobrenomeError" class="mdl-textfield__error">Valor inválido</span>
                        </div><br class="mdl-layout--large-screen-only"/>
                        <div class="mdl-textfield mdl-js-textfield">
                            <input  class="mdl-textfield__input" type="date" id="tfDtNasc" pattern="(0[1-9]|1[0-9]|2[0-9]|3[01]).(0[1-9]|1[012]).[0-9]{4}">
                            <span id="dtNascError" class="mdl-textfield__error">Valor inválido</span>
                        </div><br />
                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label fullWidth">
                            <input class="mdl-textfield__input" type="email" id="tfEmail">
                            <label class="mdl-textfield__label" for="tfEmail">Email</label>
                            <span id="emailError" class="mdl-textfield__error">Valor inválido</span>
                        </div><br />
                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label fullWidth">
                            <input class="mdl-textfield__input" type="password" id="tfPassword">
                            <label class="mdl-textfield__label" for="tfPassword">Senha</label>
                            <span id="passwordError" class="mdl-textfield__error">Valor inválido</span>
                        </div>
                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label fullWidth">
                            <input class="mdl-textfield__input" type="password" id="tfPasswordConf">
                            <label class="mdl-textfield__label" for="tfPasswordConf">Confirmar Senha</label>
                            <span id="passwordConfError" class="mdl-textfield__error">As senhas não são iguais!</span>
                        </div>
                    </form>
                    <button id="btLimpar" type="reset" class="rightFloat mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--accent">Limpar</button>
                    <button id="btSalvar" type="submit" class="rightFloat mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--accent">Salvar</button>
                </div>
                <div class="mdl-layout-spacer"></div>
            </div>
        </div>
        <div class="mdl-cell mdl-cell--6-col"></div>
    </div>
    <script src="~/_js/validation.js"></script>
</main>